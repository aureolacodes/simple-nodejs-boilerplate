{
  "name": "simple_nodejs_boilerplate",
  "version": "0.0.0",
  "description": "Simple NodeJS Boilerplate",
  "main": "dist/index.js",
  "watch": {
    "compile": "{src/*,src/**/*}"
  },
  "scripts": {
    "documentation": "./node_modules/.bin/esdoc -c ./esdoc.json",
    "test:jshint": "./node_modules/.bin/jshint src/*.js src/**/*.js",
    "test:coverage": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- -R spec --compilers js:babel-core/register --opts test/mocha.opts --bail test",
    "test": "npm run test:jshint && npm run test:coverage",
    "compile:config": "cp -r src/config dist",
    "compile:babelify": "babel -d dist/ src/",
    "compile:js": "npm run compile:babelify && npm run compile:config",
    "compile": "npm run test && npm run compile:js",
    "watch": "npm-watch",
    "install": "npm run compile"
  },
  "author": "Christian Hanne <support@aureola.codes>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.4.0",
    "babel-core": "^6.4.0",
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "chai": "^3.4.1",
    "esdoc": "^0.4.3",
    "istanbul": "^0.4.1",
    "jshint": "^2.8.0",
    "mocha": "^2.3.4",
    "npm-watch": "^0.1.1"
  },
  "dependencies": {}
}
